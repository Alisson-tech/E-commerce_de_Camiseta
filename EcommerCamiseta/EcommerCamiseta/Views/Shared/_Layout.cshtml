<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ecommer de Camisetas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ecommer de Camisetas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="nav navbar-text">
                <form class="form-inline my-2 my-lg-0 pl-3-lg">

                    <input class="form-control" type="search" placeholder="Pesquisar" aria-label="Search">
                    <button class="btn btn-dark ml-1" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                </form>
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <a href='@Url.Action("Perfil", "Usuário")'>
                    <img class="icones" src='@Url.Content("../icons/perfil.png")' />
                </a>
                <a href='@Url.Action("Carrinho", "Compra")'>
                    <img class="icones" src='@Url.Content("../icons/carrinho.png")' />
                </a>
            </div>
            <!--
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Início", "Index", "Home")</li>
            <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
            <li>@Html.ActionLink("Contato", "Contato", "Home")</li>
        </ul>
    </div>
    -->
        </div>
    </div>
    <div class="container body-content">
        <footer>
            @RenderBody()
            <hr />
            <p>&copy; @DateTime.Now.Year - Ecommer de Camisetas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
